<p>This is a page generated by Logan using Ruby on Rails!</p>
<% for @statistic in @KeyboardMouseEventStatistics %>
<% if @statistic.event_type == "LClick" %>
<div class="left_click_stat_wrapper">
    <p>
        This page has been clicked
        <span id="left_click_count">
            <%= @statistic.times_triggered %></span>
        times!
    </p>
</div>
<% end %>
<% if @statistic.event_type == "SpaceBarPress" %>
<div class="space_bar_stat_wrapper">
    <p>The spacebar has been pressed <span id="spacebar_pressed_count">
            <%= @statistic.times_triggered %></span> times while on this page!</p>
</div>
<% end %>

<% end %>
<p>Here are the total amount of times the page has been clicked today:
    <%= @LeftClickCount %>
</p>
<p>and the spacebar:
    <%= @SpaceBarPressCount %>
</p>